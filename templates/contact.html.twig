{% extends 'layout.html.twig' %}

{% block content %}
    <div id="contact">
        <p class="contact-legend">
            {{ translate('Please contact me and I\'ll answer as soon as possible.')  }}
        </p>

        {# TODO Render message if any #}
        {#{{ render_message(message | default(null), code | default(null)) }}#}

        {% set currentRoute = assemble_url('contact', true) %}
        <form  action="{{ currentRoute }}" name="contactForm" id="contactForm" method="post">
            <input type="hidden" name="currentRoute" value="{{ currentRoute }}">
            <div class="row">
                <div class="col-sm-6">
                    <div class="form-group ">
                        <input type="text" name="contact[name]" placeholder="Name" class="form-control" id="name">
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-group ">
                        <input type="email" name="contact[email]" placeholder="Email" class="form-control" id="email">
                    </div>
                </div>
            </div>
            <div class="form-group ">
                <input type="text" name="contact[subject]" placeholder="Subject" class="form-control" id="subject">
            </div>
            <div class="form-group ">
                <textarea name="contact[comments]" placeholder="Comments" class="form-control" id="comments" rows="10"></textarea>
            </div>
            <div class="row">
                <div class="col-lg-4 col-md-6 col-sm-6">
                </div>
                <div class="col-lg-8 col-md-6 col-sm-6 text-right">
                    <div class="form-group ">
                        <button type="submit" name="submit" class="btn btn-primary" data-loading-text="{{ translate('Sending...') }}">{{ translate('Submit') }}</button>
                    </div>
                </div>
            </div>
        </form>

        <div class="clearfix"></div>
        <p class="contact-footer">{{
            translate('You can send me an email to %smoc.ayalecordnajela@ordnajela%s if you prefer.') | format(
                '<b class=\'backwards\'>',
                '</b>'
            ) | raw
        }}</p>
    </div>
{% endblock %}
